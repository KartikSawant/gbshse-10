  gtag('config', 'UA-172003136-2');
</script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Results</title>
    <style>
        body{
            font-family: sans-serif;
            background-color: #FFFAFA;
        }
        table{
            border-collapse: collapse;
            margin: auto;
        }
        table,th,td{
            border: 1px solid black;
            padding:5px
        }
        th {
            text-align: left;
            height:50px;
        }
        h2,h3,h4{
            text-align: center;
        }
        .inline {
  display: inline;
}

.link-button {
  background: none;
  border: none;
  color: blue;
  text-decoration: underline;
  cursor: pointer;
  font-size: 1em;
}
.link-button:focus {
  outline: none;
}
.link-button:active {
  color:red;
}
    </style>
</head>
<body>
    <h2>Results for "<%= queries.query %>"  in <%= queries.centre %></h2>
    <%if(response.length!=0) { %>
    <table style="width:50%">
        <tr>
          <th>Name</th>
          <th>Seat no</th>
        </tr>
        <% response.forEach((resp) => { %>
        <tr>
          <td><%= resp.name %></td>
          <td><form method="post" action="/result" class="inline">
            <input type="hidden" name="name" value="<%= resp.name %>">
            <input type="hidden" name="roll" value="<%= resp.roll %>">
            <input type="hidden" name="res" value="<%= resp.res %>">
            <button type="submit" name="submit_param" value="submit_value" class="link-button">
                <%= resp.roll %>
            </button>
          </form></td>
          
        </tr>
        <% }) %>
      </table>
      <h4>Click on the seat no. to get the result</h4>
      <%}else{%>
        <h3>No results found, if you think this is an error then please make sure to follow the instructions on the home page</h3>
      <%}%>
      
    <h4><a href="/">Go back</a></h4>
    <h3>Developed by <a href="https://kartiksawant.github.io" target="_blank">Kartik Sawant</a></h3>
</body>
</html>